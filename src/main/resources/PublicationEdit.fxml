<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<VBox alignment="CENTER" spacing="20.0" styleClass="main-vbox" prefHeight="700.0" prefWidth="760.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.PublicationEditController">
    <stylesheets>
        <URL value="@/styles/publications.css" />
    </stylesheets>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Modifier Publication" styleClass="publication-title" />
        <VBox fx:id="formVBox" spacing="15.0" alignment="CENTER" styleClass="form-vbox">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <children>
                <Label text="Type de Publication:" styleClass="dialog-label" />
                <ComboBox fx:id="typeComboBox" promptText="SÃ©lectionnez le type" prefWidth="680.0" styleClass="type-combo">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Flight" />
                            <String fx:value="Reservation" />
                            <String fx:value="Vehicle" />
                            <String fx:value="Other" />
                        </FXCollections>
                    </items>
                </ComboBox>
                <Label text="Titre:" styleClass="dialog-label" />
                <TextField fx:id="titreField" promptText="Entrez le titre" prefWidth="680.0" />
                <Label text="Contenu:" styleClass="dialog-label" />
                <TextArea fx:id="contenuField" promptText="Entrez le contenu" wrapText="true" prefRowCount="5" prefWidth="680.0" />
                <Label text="Likes:" styleClass="dialog-label" />
                <Label fx:id="likeCountLabel" styleClass="like-count-label" />
                <CheckBox fx:id="activeCheckBox" text="Actif" styleClass="form-checkbox" />
                <HBox spacing="10.0" alignment="CENTER_RIGHT">
                    <Button fx:id="cancelButton" text="Annuler" styleClass="action-button delete-button" onAction="#cancelEdit" />
                    <Button fx:id="saveButton" text="Enregistrer" styleClass="action-button" onAction="#savePublication" disable="true" />
                </HBox>
            </children>
        </VBox>
    </children>
</VBox>