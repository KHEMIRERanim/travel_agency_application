<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AfficherVolsController">
    <children>
        <!-- Vue principale de la liste des vols -->
        <AnchorPane fx:id="mainPane" layoutY="-7.0" prefHeight="100.0" prefWidth="100.0" style="-fx-background-color: #a0dfe3; -fx-background-radius: 0;">
            <children>
                <ScrollPane fitToWidth="true" layoutX="-7.0" layoutY="98.0" prefHeight="600.0" prefWidth="1239.0" style="-fx-background-color: transparent; -fx-border-radius: 5;">
                    <content>
                        <!-- Utilisation de FlowPane pour organiser les vols horizontalement et automatiquement -->
                        <FlowPane fx:id="flightsContainer" alignment="TOP_CENTER" hgap="20.0" prefWidth="1051.0" style="-fx-background-color: transparent; -fx-padding: 15;" vgap="20.0">
                            <!-- Les vols seront ajoutés ici dynamiquement -->
                        </FlowPane>
                    </content>
                </ScrollPane>
                <Label fx:id="statusLabel" alignment="CENTER" layoutX="400.0" layoutY="788.0" prefHeight="20.0" prefWidth="400.0" textAlignment="CENTER" textFill="#039BE5">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>

        <!-- Vue du formulaire de modification - initialement cachée -->
        <AnchorPane fx:id="editPane" prefHeight="793.0" prefWidth="1134.0" style="-fx-background-color: #ffebfb; -fx-background-radius: 10;" visible="false">
            <!-- Le contenu du formulaire de modification sera chargé dynamiquement ici -->
        </AnchorPane>
    </children>
</AnchorPane>
