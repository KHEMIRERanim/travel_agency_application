<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx/23.0.1"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="controllers.AjoutHotelController"
          hgap="10" vgap="10"
          style="-fx-background-color: #FFFFFF; -fx-font-family: 'Segoe UI';">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Ajouter un Hôtel" style="-fx-font-size: 24px; -fx-font-weight: bold;" GridPane.columnSpan="2" GridPane.rowIndex="0" GridPane.columnIndex="0" />

    <Label text="Nom de l'hôtel:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <TextField fx:id="nomField" promptText="Entrez le nom de l'hôtel" GridPane.rowIndex="1" GridPane.columnIndex="1" />

    <Label text="Destination:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <TextField fx:id="destinationField" promptText="Ville ou région" GridPane.rowIndex="2" GridPane.columnIndex="1" />

    <Label text="Check-in:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <DatePicker fx:id="checkInPicker" GridPane.rowIndex="3" GridPane.columnIndex="1" />
    <Label text="Check-out:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
    <DatePicker fx:id="checkOutPicker" GridPane.rowIndex="4" GridPane.columnIndex="1" />

    <Label text="Prix (€/nuit):" GridPane.rowIndex="5" GridPane.columnIndex="0" />
    <TextField fx:id="prixField" promptText="Ex: 45.00" GridPane.rowIndex="5" GridPane.columnIndex="1" />

    <Label text="Type de chambre:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
    <ChoiceBox fx:id="typeChoice" GridPane.rowIndex="6" GridPane.columnIndex="1" />

    <Label text="Statut:" GridPane.rowIndex="7" GridPane.columnIndex="0" />
    <ChoiceBox fx:id="statusChoice" GridPane.rowIndex="7" GridPane.columnIndex="1" />

    <Label fx:id="errorLabel" textFill="#D32F2F" wrapText="true" GridPane.rowIndex="8" GridPane.columnIndex="0" GridPane.columnSpan="2" />

    <HBox spacing="10" GridPane.rowIndex="9" GridPane.columnIndex="0" GridPane.columnSpan="2" alignment="CENTER_RIGHT">
        <Button text="Annuler" onAction="#onCancel" style="-fx-background-color: #B0BEC5; -fx-text-fill: white;" />
        <Button text="Enregistrer" onAction="#onSubmit" style="-fx-background-color: #1976D2; -fx-text-fill: white;" />
    </HBox>
</GridPane>
