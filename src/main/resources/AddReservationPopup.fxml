<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="400.0" spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AddReservationPopupController">
    <children>
        <Label text="Ajouter une Réservation" styleClass="header-label" />
        <GridPane hgap="10.0" vgap="10.0">
            <children>
                <Label text="Client :" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <ComboBox fx:id="clientComboBox" promptText="Sélectionner un client" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="Véhicule :" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <ComboBox fx:id="vehicleComboBox" promptText="Sélectionner un véhicule" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Label text="Date de début :" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <DatePicker fx:id="dateDebutPicker" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                <Label text="Date de fin :" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <DatePicker fx:id="dateFinPicker" GridPane.rowIndex="3" GridPane.columnIndex="1" />
            </children>
        </GridPane>

        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Button fx:id="saveButton" onAction="#saveReservation" text="Enregistrer" styleClass="button,button-success" />
                <Button fx:id="cancelButton" onAction="#closePopup" text="Annuler" styleClass="button,button-danger" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>