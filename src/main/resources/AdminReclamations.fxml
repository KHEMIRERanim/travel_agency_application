<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.effect.DropShadow?>
<?import java.net.URL?>

<AnchorPane prefHeight="700.0" prefWidth="760.0" style="-fx-background-color: #f4f6f9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AdminReclamationsController">
    <stylesheets>
        <URL value="@/styles/admin-common.css" />
        <URL value="@/styles/listview.css" />
    </stylesheets>

    <children>
        <VBox prefHeight="700.0" prefWidth="760.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="760.0" style="-fx-background-color: white;">
                    <children>
                        <Label text="Gestion des Réclamations" styleClass="label-header">
                            <HBox.margin>
                                <Insets left="25.0" />
                            </HBox.margin>
                        </Label>
                    </children>
                    <effect>
                        <DropShadow height="10.0" radius="4.5" width="10.0" color="#00000033" />
                    </effect>
                </HBox>

                <HBox alignment="CENTER_LEFT" prefHeight="50.0" style="-fx-background-color: #f4f6f9;">
                    <children>
                        <Label text="Liste des réclamations clients" styleClass="label-subheader">
                            <HBox.margin>
                                <Insets left="25.0" />
                            </HBox.margin>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>

                <ListView fx:id="reclamationsListView" prefHeight="350.0" prefWidth="760.0" styleClass="reclamations-list">
                    <VBox.margin>
                        <Insets bottom="20.0" left="0.0" right="0.0" top="10.0" />
                    </VBox.margin>
                    <effect>
                        <DropShadow height="10.0" radius="4.5" width="10.0" color="#00000033" />
                    </effect>
                </ListView>

                <HBox alignment="CENTER_LEFT" prefHeight="50.0" style="-fx-background-color: #f4f6f9;">
                    <children>
                        <Label text="Détails de la réclamation" styleClass="label-subheader">
                            <HBox.margin>
                                <Insets left="25.0" />
                            </HBox.margin>
                        </Label>
                    </children>
                </HBox>

                <VBox prefHeight="300.0" prefWidth="760.0" styleClass="card">
                    <VBox.margin>
                        <Insets bottom="20.0" left="0.0" right="0.0" />
                    </VBox.margin>
                    <padding>
                        <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
                    </padding>
                    <children>
                        <HBox prefHeight="40.0" prefWidth="710.0">
                            <children>
                                <VBox prefHeight="40.0" prefWidth="710.0">
                                    <children>
                                        <Label text="Client" styleClass="label-info" />
                                        <Label fx:id="clientLabel" text="-" styleClass="label-value" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <HBox prefHeight="40.0" prefWidth="710.0">
                            <children>
                                <VBox prefHeight="40.0" prefWidth="355.0">
                                    <children>
                                        <Label text="Type de réclamation" styleClass="label-info" />
                                        <Label fx:id="typeLabel" text="--" styleClass="label-value" />
                                    </children>
                                </VBox>
                                <VBox prefHeight="40.0" prefWidth="355.0">
                                    <children>
                                        <Label text="Date de l'incident" styleClass="label-info" />
                                        <Label fx:id="dateLabel" text="--" styleClass="label-value" />
                                    </children>
                                </VBox>
                            </children>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </HBox>

                        <Label text="Description" styleClass="label-info">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Label>
                        <TextArea fx:id="descriptionTextArea" editable="false" prefHeight="150.0" prefWidth="710.0" styleClass="text-area" wrapText="true" />
                    </children>
                </VBox>

                <Label fx:id="statusLabel" alignment="CENTER" prefHeight="20.0" prefWidth="760.0" styleClass="label-value" />
            </children>
        </VBox>
    </children>
</AnchorPane>