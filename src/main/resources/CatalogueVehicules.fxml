<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" styleClass="root-pane" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CatalogueVehiculesController">
    <top>
        <VBox styleClass="header">
            <children>
                <Label styleClass="header-title" text="Car Rental - Vehicle Catalog" />
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <TextField fx:id="searchField" promptText="Search by type or price" styleClass="search-field" />
                        <Button onAction="#handleSearch" styleClass="button" text="Search" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" stylesheets="@styles/med.css">
            <content>
                <TilePane fx:id="vehiclePane" hgap="20.0" styleClass="tile-pane" vgap="20.0">
                    <!-- Vehicle cards will be added dynamically -->
                </TilePane>
            </content>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </ScrollPane>
    </center>
</BorderPane>
