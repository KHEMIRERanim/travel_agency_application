<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.ListeHotelsController">

    <children>
        <!-- VBox anchors to fill the parent -->
        <VBox AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
              spacing="20">

            <!-- TOP: Selected‐hotel area -->
            <VBox spacing="15">
                <padding>
                    <Insets top="20" right="20" bottom="0" left="20"/>
                </padding>

                <!-- Image with rounded corners -->
                <StackPane>
                    <ImageView fx:id="selectedImage"
                               preserveRatio="true"
                               fitWidth="400" fitHeight="300">
                        <clip>
                            <Rectangle width="400" height="300" arcWidth="30" arcHeight="30"/>
                        </clip>
                    </ImageView>
                </StackPane>

                <!-- Hotel name -->
                <Label fx:id="selectedTitle"
                       styleClass="hotel-title"
                       wrapText="true"/>

                <!-- Details -->
                <Label fx:id="selectedDetails"
                       wrapText="true"
                       maxWidth="400"/>

                <!-- Rating -->
                <HBox fx:id="ratingBox" spacing="5"/>

                <!-- Action buttons -->
                <HBox spacing="10">
                    <Button text="Éditer" onAction="#goToEditHotel" HBox.hgrow="ALWAYS"/>
                    <Button text="Supprimer" onAction="#onDeleteHotel" HBox.hgrow="ALWAYS"/>
                    <Button fx:id="cancelButton" text="Fermer" onAction="#cancelButtonOnAction"/>
                </HBox>
            </VBox>

            <!-- Divider line (optional) -->
            <Separator/>

            <!-- BOTTOM: Carousel of thumbnails -->
            <ScrollPane fx:id="carouselScroll"
                        VBox.vgrow="ALWAYS"
                        fitToWidth="true"
                        fitToHeight="true">
                <content>
                    <HBox fx:id="carousel" spacing="10">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                    </HBox>
                </content>
            </ScrollPane>
        </VBox>
    </children>
</AnchorPane>
