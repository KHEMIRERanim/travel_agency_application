<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.ListeHotelsController">

    <children>
        <!-- VBox anchors to fill the parent -->
        <VBox AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
              spacing="20">

            <!-- TOP: Image and hotel details in one horizontal box -->
            <HBox spacing="20">
                <padding>
                    <Insets top="20" right="20" bottom="0" left="20"/>
                </padding>

                <!-- Left: Big Image -->
                <StackPane>
                    <ImageView fx:id="selectedImage"
                               preserveRatio="true"
                               fitWidth="400" fitHeight="300">
                        <clip>
                            <Rectangle width="400" height="300" arcWidth="30" arcHeight="30"/>
                        </clip>
                    </ImageView>
                </StackPane>

                <!-- Right: Details and actions -->
                <VBox spacing="10">
                    <Label fx:id="selectedTitle"
                           styleClass="hotel-title"
                           wrapText="true"/>

                    <Label fx:id="selectedDetails"
                           wrapText="true"
                           maxWidth="400"/>

                    <HBox fx:id="ratingBox" spacing="5"/>

                    <HBox spacing="10">
                        <Button text="Ã‰diter" onAction="#goToEditHotel" HBox.hgrow="ALWAYS"/>
                        <Button text="Supprimer" onAction="#onDeleteHotel" HBox.hgrow="ALWAYS"/>
                    </HBox>
                </VBox>
            </HBox>

            <!-- Divider line -->
            <Separator/>

            <!-- BOTTOM: Carousel of thumbnails -->
            <ScrollPane fx:id="carouselScroll"
                        VBox.vgrow="ALWAYS"
                        prefWidth="150.0"
                        fitToHeight="true">
                <content>
                    <HBox fx:id="carousel" spacing="10">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                    </HBox>
                </content>
            </ScrollPane>
        </VBox>
    </children>
</AnchorPane>
