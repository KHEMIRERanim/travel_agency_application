<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Region?>

<AnchorPane prefHeight="800.0" prefWidth="900.0" style="-fx-background-color: #f4f6f9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.FlightBookingController">
    <stylesheets>
        <URL value="@/styles/admin-common.css" />
        <URL value="@/styles/tableview.css" />
    </stylesheets>

    <children>
        <VBox prefHeight="800.0" prefWidth="900.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="900.0" style="-fx-background-color: white;">
                    <effect>
                        <DropShadow height="10.0" radius="4.5" width="10.0" color="#00000033" />
                    </effect>
                    <children>
                        <Label text="Confirmation de Réservation" styleClass="label-header">
                            <HBox.margin>
                                <Insets left="25.0" />
                            </HBox.margin>
                        </Label>
                    </children>
                </HBox>

                <HBox alignment="CENTER_LEFT" prefHeight="50.0" style="-fx-background-color: #f4f6f9;">
                    <children>
                        <Label text="Détails du Vol" styleClass="label-subheader">
                            <HBox.margin>
                                <Insets left="25.0" />
                            </HBox.margin>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>

                <VBox fx:id="flightDetailCard" prefHeight="200.0" prefWidth="850.0" styleClass="card">
                    <VBox.margin>
                        <Insets bottom="20.0" left="25.0" right="25.0" top="10.0" />
                    </VBox.margin>
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <ImageView fx:id="airlineImageView" fitHeight="40.0" fitWidth="80.0" preserveRatio="true" />
                            <Label fx:id="airlineLabel" styleClass="bold-label" text="Airline Name">
                                <font>
                                    <Font name="System Bold" size="16.0" />
                                </font>
                            </Label>
                            <Region HBox.hgrow="ALWAYS" />
                            <Label fx:id="flightNumberLabel" text="Flight XYZ123" style="-fx-text-fill: #757575;" />
                        </HBox>

                        <HBox alignment="CENTER" spacing="10.0" prefHeight="60.0">
                            <padding>
                                <Insets top="15.0" bottom="15.0" />
                            </padding>
                            <Label fx:id="departureLabel" text="City\n00:00" />
                            <VBox alignment="CENTER">
                                <Region prefHeight="1.0" prefWidth="200.0" style="-fx-background-color: #BDBDBD;" />
                                <Label fx:id="durationLabel" text="0h 00m" style="-fx-text-fill: #757575;" />
                            </VBox>
                            <Label fx:id="destinationLabel" text="City\n00:00" />
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <Label fx:id="priceLabel" text="0.00" style="-fx-text-fill: #FF6F00;">
                                <font>
                                    <Font name="System Bold" size="18.0" />
                                </font>
                            </Label>
                            <Label fx:id="seatsLabel" text="0 seats" style="-fx-text-fill: #4CAF50;" />
                            <Label fx:id="dateLabel" text="01 Jan 2025" style="-fx-text-fill: #616161;" />
                            <Label fx:id="passengersLabel" text="1 passenger(s)" style="-fx-text-fill: #616161;" />
                        </HBox>
                    </children>
                </VBox>

                <HBox alignment="CENTER_LEFT" prefHeight="50.0" style="-fx-background-color: #f4f6f9;">
                    <children>
                        <Label text="Informations du Client" styleClass="label-subheader">
                            <HBox.margin>
                                <Insets left="25.0" />
                            </HBox.margin>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </HBox>

                <VBox prefHeight="320.0" prefWidth="850.0" styleClass="card">
                    <VBox.margin>
                        <Insets bottom="20.0" left="25.0" right="25.0" top="10.0" />
                    </VBox.margin>
                    <padding>
                        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                    </padding>
                    <children>
                        <GridPane hgap="20.0" vgap="15.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="70.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="70.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="70.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Nom" styleClass="label-info" />
                                        <TextField fx:id="tf_nom" styleClass="text-field" />
                                    </children>
                                </VBox>
                                <VBox spacing="5.0" GridPane.columnIndex="1">
                                    <children>
                                        <Label text="Prénom" styleClass="label-info" />
                                        <TextField fx:id="tf_prenom" styleClass="text-field" />
                                    </children>
                                </VBox>
                                <VBox spacing="5.0" GridPane.rowIndex="1">
                                    <children>
                                        <Label text="Email" styleClass="label-info" />
                                        <TextField fx:id="tf_email" styleClass="text-field" />
                                    </children>
                                </VBox>
                                <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <children>
                                        <Label text="Téléphone" styleClass="label-info" />
                                        <TextField fx:id="tf_telephone" styleClass="text-field" />
                                    </children>
                                </VBox>
                                <VBox spacing="5.0" GridPane.rowIndex="2">
                                    <children>
                                        <Label text="Date de naissance" styleClass="label-info" />
                                        <TextField fx:id="tf_dateNaissance" styleClass="text-field" />
                                    </children>
                                </VBox>
                                <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                    <children>
                                        <Label text="Nombre de passagers" styleClass="label-info" />
                                        <TextField fx:id="tf_passengers" styleClass="text-field" editable="false" />
                                    </children>
                                </VBox>
                            </children>
                        </GridPane>
                    </children>
                </VBox>

                <HBox alignment="CENTER" prefHeight="60.0" prefWidth="850.0" styleClass="card">
                    <VBox.margin>
                        <Insets bottom="20.0" left="25.0" right="25.0" />
                    </VBox.margin>
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                    </padding>
                    <children>
                        <Pane prefHeight="60.0" prefWidth="90.0" HBox.hgrow="ALWAYS" />
                        <Button fx:id="btn_back" mnemonicParsing="false" onAction="#goBack" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #616161; -fx-text-fill: white;" text="Retour">
                            <HBox.margin>
                                <Insets right="10.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="btn_confirmBooking" mnemonicParsing="false" onAction="#confirmBooking" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #FF9E0C; -fx-text-fill: white; -fx-font-weight: bold;" text="Confirmer la Réservation" />
                    </children>
                </HBox>

                <Label fx:id="statusLabel" alignment="CENTER" prefHeight="20.0" prefWidth="850.0" styleClass="label-value" style="-fx-text-fill: #1e3a8a;">
                    <VBox.margin>
                        <Insets left="25.0" right="25.0" />
                    </VBox.margin>
                </Label>
            </children>
        </VBox>
    </children>
</AnchorPane>