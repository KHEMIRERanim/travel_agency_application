<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="400.0" spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EditVehiclePopupController">
    <children>
        <Label text="Modifier un Véhicule" styleClass="header-label" />
        <GridPane hgap="10.0" vgap="10.0">
            <children>
                <Label text="Type :" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="typeField" promptText="Type de véhicule" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="Lieu de prise :" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="lieuPriseField" promptText="Lieu de prise" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Label text="Lieu de retour :" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextField fx:id="lieuRetourField" promptText="Lieu de retour" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                <Label text="Date de location :" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <DatePicker fx:id="dateLocationPicker" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                <Label text="Date de retour :" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                <DatePicker fx:id="dateRetourPicker" GridPane.rowIndex="4" GridPane.columnIndex="1" />

                <Label text="Chemin de l'image :" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                <TextField fx:id="imagePathField" promptText="Chemin de l'image" GridPane.rowIndex="5" GridPane.columnIndex="1" />

                <Label text="Prix par jour :" GridPane.rowIndex="6" GridPane.columnIndex="0" />
                <TextField fx:id="prixField" promptText="Prix par jour" GridPane.rowIndex="6" GridPane.columnIndex="1" />
            </children>
        </GridPane>

        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Button fx:id="saveButton" onAction="#saveVehicle" text="Enregistrer" styleClass="button,button-success" />
                <Button fx:id="cancelButton" onAction="#closePopup" text="Annuler" styleClass="button,button-danger" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>